@model IDGS903_AplicacionWeb.Models.ConversionGrados


@{
    ViewBag.Title = "Grados";
}

<h2>Conversion de grados °C <-> °F</h2>

<br />
<br />

<div class="row">
    <div class="col-md-6">
        <form action="/" method="post">

            <label>Grados:</label>
            <input class="form-control" type="text" value="0" name="Grado" />

            <br />
            <p>Convertir a:</p>
            <input type="radio" name="opcion" value="C" checked />
            <label>°C</label>

            <br />

            <input type="radio" name="opcion" value="F" />
            <label>°F</label>

            <br />

            <input class="btn btn-primary" type="submit" value="Calcular" />

        </form>
    </div>

    <div class="col-md-6">
        <h1>Grados</h1>
        <h2>@Model.Res</h2>
    </div>

</div>


